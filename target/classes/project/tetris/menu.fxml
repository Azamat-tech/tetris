<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.net.URL?>

<AnchorPane prefHeight="780.0"
            prefWidth="720.0"
            styleClass="anchor"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="project.tetris.controller.MenuController">

    <stylesheets>
        <URL value="@application.css" />
    </stylesheets>

    <Label fx:id="gameNameLabel"
           layoutY="39.0" alignment="CENTER"
           prefHeight="74.0" prefWidth="720.0"
           text="T E T R I S" styleClass="title, text"
           textFill="WHITE"
           wrapText="true"/>


    <Button fx:id="startBtn"
            layoutX="285.0" layoutY="535.0"
            prefHeight="40.0" prefWidth="150.0"
            styleClass="button, text"
            text="Start Game"
            onAction="#onStartButtonClick"
    />

    <Button fx:id="leaderBoardBtn"
            layoutX="285.0" layoutY="590.0"
            prefHeight="40.0" prefWidth="150.0"
            styleClass="button, text"
            text="Leaderboard"
            onAction="#onLeaderBoardBtnClick"
    />

    <Button fx:id="quitBtn"
            layoutX="285.0" layoutY="690.0"
            prefHeight="40.0" prefWidth="150.0"
            styleClass="button, text" text="Quit"
            onAction="#onQuitButtonClick"
    />

    <Button fx:id="instructionBtn"
            layoutX="285.0" layoutY="640.0"
            prefHeight="40.0" prefWidth="150.0"
            styleClass="button" text="Instructions"
            onAction="#onInstructionButtonClick"
    />
</AnchorPane>
